<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <TargetFramework>net5.0</TargetFramework>
    <Authors>Erik Henningson</Authors>
    <Company />
    <Description>Simplify rendering of HTML picture element. Supports optimized, lazy loaded, and responsive images.</Description>
    <PackageProjectUrl>https://github.com/ErikHen/PictureRenderer.Optimizely</PackageProjectUrl>
    <RepositoryUrl>https://github.com/ErikHen/PictureRenderer.Optimizely</RepositoryUrl>
    <PackageTags>Picture Responsive Image Lazy</PackageTags>
    <PackageLicenseExpression>MIT</PackageLicenseExpression>
    <PackageIcon>picture_icon.png</PackageIcon>
    <PackageIconUrl />
  </PropertyGroup>

  <ItemGroup>
    <PackageReference Include="EPiServer.CMS.AspNetCore.Routing" Version="12.0.3" />
    <PackageReference Include="EPiServer.CMS.Core" Version="12.0.3" />
    <PackageReference Include="Microsoft.AspNetCore.Mvc.ViewFeatures" Version="2.2.0" />
    <PackageReference Include="PictureRenderer" Version="1.2.2" />
  </ItemGroup>

  <ItemGroup>
    <Folder Include="_Build\" />
  </ItemGroup>

  <ItemGroup>
    <None Include="_Build\picture_icon.png">
      <Pack>True</Pack>
      <PackagePath></PackagePath>
    </None>
  </ItemGroup>

</Project>
